<div class="indexContainer">
  <section class="indexLabel">
    <h3>Learn to code,gain a new skill, get a new job</h3>
    <form class="" action="index.html" method="post" id="indexSearchForm">
      <input type="text" name="" value="" placeholder="Search the course" >
      <button type="button" name="button" class="btn btn-primary">Search</button>
    </form>
    <div class="" id="courseData">
       <h5><span class="num"> 50+ </span> Courses </h5>
       <h5><span class="num"> 50+ </span>Teachers</h5>
      <h5><span class="num">200+ </span> Students</h5>
    </div>
  </section>
  <section class="indexForms">
    <form class=""  method="post" id="signupForm">
      <h3>Sign up</h3>
      <input type="text" name=""  id="StudentFirstName" placeholder="Enter the First Name" class="signupInputs form-control">
      <input type="text" name="" id="StudentLastName" placeholder="Enter the Last Name" class="signupInputs form-control">
      <div class="gender">
            <input type="radio" name="gender" value="male" id="male" >
            <label for="male" >Male</label>

            <input type="radio" name="gender" value="female" id="female">
            <label for="female">Female</label>

            <input type="radio" name="gender" value="other" id="other">
            <label for="other">Other</label>
      </div>

      <input placeholder="Enter the Date of Birth" class="textbox-n signupInputs form-control " type="text" onblur="(this.type='text')"
      onfocus="(this.type='date')"   id="StudentDob">

      <input type="text" name=""  id="StudentPhone" class="signupInputs form-control" placeholder="Enter the phone">
      <input type="text" name=""  id="StudentAddress" class="signupInputs form-control" placeholder="Enter the Address">
      <input type="email" name=""  id="StudentEmail" class="signupInputs form-control" placeholder="Enter the Email">
      <input type="password" name="" id="StudentPassword" class="signupInputs form-control" placeholder="Enter the password">
      <input type="password" name=""  id="StudentConfirmPassword" class="signupInputs form-control" placeholder="Confirm the password">
      <button type="submit" name="button" class="btn btn-primary">Signup</button>
    </form>

    <form class="" action="index.html" method="post" id="loginForm" style="display:none">
      <h3>Log In</h3>
      <input type="text" name="" value="" placeholder="Enter the Email" id="loginEmail">
      <input type="text" name="" value="" placeholder="Enter the password" id="loginPassword">
      <button type="submit" name="button" class="btn btn-primary">Log In</button>
    </form>
  </section>
</div>

